rules_version = '2';

// Firebase Storage Security Rules for Project Reflect
service firebase.storage {
  match /b/{bucket}/o {
    // Game assets (plant images, etc.) - public read for authenticated users
    match /game_assets/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can upload via Firebase Console
    }
    
    // Journal entry photos (drawings, reflections)
    match /journal-photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB max
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile pictures (if added later)
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // 5MB max
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
